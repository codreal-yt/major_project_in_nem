
<div class="container new-login-area">
    <div id='sign-in' class='login-setup-section'>
        <form action="/mobile_otp/mobileno" method="post">
            <h3 class="request-otp-header">Please verify your mobile number</h3>
        <div class="form-group login-label">
            <label for="inputnumber">mobile number</label>
            <input type="number" class="form-control input-edit" name="number" placeholder='Enter mobile number' id="number">
        </div>
        <button type="submit" class="btn btn-default btn-lg btn-block request-otp" id='request-otp'>Get OTP</button>
        </form>
        
    </div>
    <div id='verify-otp' class="login-setup-section">
        <form action="/mobile_otp/otp" method="post">
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
        <h3 class="request-otp-header">Verify OTP</h3>
        <div class="form-group login-label">
            <label for="inputnumber">One Time Password</label>
            <input type="number" class="form-control input-edit" name="otp" placeholder='Enter OTP' id="number">
            <label class="pull-right resend-otp">Resend otp</label>
        </div>
        <button type="submit" class="btn btn-default btn-lg btn-block request-otp ">Verify</button>
        </form>
        
    </div>
</div>

<!-- Script Start -->
<script>
    $('#verify-otp').hide();
$('#request-otp').on('click',function(){
  $('#sign-in').hide();
  $('#verify-otp').show();
});
$('.fa-chevron-left').on('click',function(){
  $('#sign-in').show();
  $('#verify-otp').hide();
});
</script>